<Window x:Class="YoutubeExplodeDemo.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:ignore="http://www.galasoft.ch/ignore"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="YoutubeExplode Demo"
        Width="750"
        Height="600"
        Background="{DynamicResource MaterialDesignPaper}"
        DataContext="{Binding Main,
                              Source={StaticResource Locator}}"
        FocusManager.FocusedElement="{Binding ElementName=VideoIDTextBox}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        Icon="/YoutubeExplodeDemo;component/favicon.ico"
        TextElement.FontSize="13"
        TextElement.FontWeight="Regular"
        TextElement.Foreground="{DynamicResource SecondaryTextBrush}"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d ignore">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <materialDesign:Card Grid.Row="0" Padding="5">
            <StackPanel>
                <TextBlock Text="Youtube Video ID or URL:" />

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBox x:Name="VideoIDTextBox"
                             Grid.Column="0"
                             KeyDown="tbVideoID_KeyDown"
                             Text="{Binding VideoID,
                                            UpdateSourceTrigger=PropertyChanged}" />
                    <Button x:Name="SubmitButton"
                            Grid.Column="1"
                            Command="{Binding SubmitCommand}"
                            Padding="5">
                        <materialDesign:PackIcon Width="24"
                                                 Height="24"
                                                 Kind="ArrowRight"
                                                 ToolTip="Get Video Info" />
                    </Button>
                </Grid>
            </StackPanel>
        </materialDesign:Card>

        <materialDesign:Card Grid.Row="1"
                             Padding="0"
                             Visibility="{Binding VideoInfoVisible,
                                                  Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Background="{DynamicResource PrimaryHueMidBrush}">
                    <TextBlock Margin="5"
                               HorizontalAlignment="Center"
                               FontSize="20"
                               Foreground="{DynamicResource PrimaryHueMidForegroundBrush}"
                               Text="{Binding VideoInfo.Title}"
                               TextTrimming="CharacterEllipsis"
                               TextWrapping="NoWrap" />
                </Border>

                <Image Grid.Row="1"
                       Margin="5"
                       Source="{Binding ThumbnailImageSource}" />

                <MediaElement x:Name="VideoMediaElement"
                              Grid.Row="1"
                              Margin="5"
                              LoadedBehavior="Manual"
                              Source="{Binding SelectedStream.URL}"
                              StretchDirection="DownOnly" />

                <Slider x:Name="VideoPositionSlider"
                        Grid.Row="2"
                        Margin="15,5,15,5"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        IsMoveToPointEnabled="True"
                        LargeChange="0.1"
                        Maximum="1"
                        Minimum="0"
                        PreviewMouseLeftButtonUp="VideoPositionSlider_PreviewMouseLeftButtonUp"
                        SmallChange="0.05" />

                <UniformGrid Grid.Row="3"
                             HorizontalAlignment="Center"
                             Rows="1">
                    <Button x:Name="PlayButton"
                            Margin="5"
                            Click="PlayButton_OnClick"
                            Padding="5">
                        <materialDesign:PackIcon Width="24"
                                                 Height="24"
                                                 Kind="Play" />
                    </Button>
                    <Button x:Name="PauseButton"
                            Margin="5"
                            Click="PauseButton_OnClick"
                            Padding="5">
                        <materialDesign:PackIcon Width="24"
                                                 Height="24"
                                                 Kind="Pause" />
                    </Button>
                    <Button x:Name="StopButton"
                            Margin="5"
                            Click="StopButton_OnClick"
                            Padding="5">
                        <materialDesign:PackIcon Width="24"
                                                 Height="24"
                                                 Kind="Stop" />
                    </Button>

                </UniformGrid>

                <UniformGrid Grid.Row="4"
                             Background="{DynamicResource PrimaryHueDarkBrush}"
                             Rows="1">
                    <TextBlock Margin="5"
                               HorizontalAlignment="Center"
                               Foreground="{DynamicResource PrimaryHueDarkForegroundBrush}"
                               Text="{Binding VideoInfo.Author}" />
                    <TextBlock Margin="5"
                               HorizontalAlignment="Center"
                               Foreground="{DynamicResource PrimaryHueDarkForegroundBrush}"
                               Text="{Binding VideoInfo.Length}" />
                    <TextBlock Margin="5"
                               HorizontalAlignment="Center"
                               Foreground="{DynamicResource PrimaryHueDarkForegroundBrush}"
                               Text="{Binding VideoInfo.ViewCount,
                                              StringFormat=\{0:N0\} views}" />
                    <TextBlock Margin="5"
                               HorizontalAlignment="Center"
                               Foreground="{DynamicResource PrimaryHueDarkForegroundBrush}"
                               Text="{Binding VideoInfo.AvgRating,
                                              StringFormat=\{0:N2\} ★}" />
                </UniformGrid>

                <Grid Grid.Row="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <ComboBox Grid.Column="0"
                              Margin="5"
                              Grid.IsSharedSizeScope="True"
                              ItemsSource="{Binding VideoInfo.Streams}"
                              SelectedItem="{Binding SelectedStream}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <Grid HorizontalAlignment="Left">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" SharedSizeGroup="VideoStreamTypeColumn" />
                                        <ColumnDefinition Width="Auto" SharedSizeGroup="VideoStreamQualityColumn" />
                                    </Grid.ColumnDefinitions>

                                    <WrapPanel Grid.Column="0" Margin="0,0,5,0">
                                        <TextBlock Foreground="{DynamicResource SecondaryTextBrush}" Text="Type: " />
                                        <TextBlock Foreground="{DynamicResource PrimaryTextBrush}" Text="{Binding FileExtension}" />
                                    </WrapPanel>
                                    <WrapPanel Grid.Column="1">
                                        <TextBlock Foreground="{DynamicResource SecondaryTextBrush}" Text="Quality: " />
                                        <TextBlock Foreground="{DynamicResource PrimaryTextBrush}" Text="{Binding Quality}" />
                                    </WrapPanel>
                                </Grid>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <Button x:Name="DownloadButton"
                            Grid.Column="1"
                            Margin="5"
                            Command="{Binding DownloadVideoCommand}"
                            Padding="5"
                            ToolTip="Download">
                        <materialDesign:PackIcon Width="24"
                                                 Height="24"
                                                 Kind="Download" />
                    </Button>
                </Grid>

                <ProgressBar Grid.Row="6"
                             Foreground="{DynamicResource SecondaryAccentBrush}"
                             Maximum="1"
                             Minimum="0"
                             Visibility="{Binding IsDownloading,
                                                  Converter={StaticResource BoolToVisibilityConverter},
                                                  ConverterParameter=Visibility.Collapsed}"
                             Value="{Binding DownloadProgress}" />
            </Grid>
        </materialDesign:Card>
    </Grid>
</Window>
